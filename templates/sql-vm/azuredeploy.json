{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "labName": {
      "type": "string",
      "metadata": {
          "description": "DevTest Lab name, for networking"
      },
      "defaultValue": "DevTestLab"
    },
    "newVMName": {
      "type": "string",
      "metadata": {
          "description": "Virtual machine name"
      },
      "defaultValue": "vmsql01"
    },
    "size": {
      "type": "string",
      "metadata": {
          "description": "Virtual machine size"
      },
      "defaultValue": "Standard_DS2_v2"
    },
    "sqlEdition": {
      "type": "string",
      "metadata": {
          "description": "Virtual machine name"
      },
      "allowedValues": [
        "SQLDEV",
        "Enterprise"
      ],
      "defaultValue": "SQLDEV"
    },
    "userName": {
      "type": "string",
      "metadata": {
          "description": "Administrator username"
      },
      "defaultValue": "sysadmin"
    },
    "password": {
      "type": "securestring",
      "metadata": {
          "description": "Administrator password"
      },
      "defaultValue": "[[[VmPassword]]"
    }
  },
  "variables": {
    "labSubnetName": "[concat(variables('labVirtualNetworkName'), 'Subnet')]",
    "labVirtualNetworkId": "[resourceId('Microsoft.DevTestLab/labs/virtualnetworks', parameters('labName'), variables('labVirtualNetworkName'))]",
    "labVirtualNetworkName": "[concat('Dtl', parameters('labName'))]",
    "vmId": "[resourceId ('Microsoft.DevTestLab/labs/virtualmachines', parameters('labName'), parameters('newVMName'))]",
    "vmName": "[concat(parameters('labName'), '/', parameters('newVMName'))]"
  },
  "resources": [
    {
      "apiVersion": "2016-05-15",
      "type": "Microsoft.DevTestLab/labs/virtualmachines",
      "name": "[variables('vmName')]",
      "location": "[resourceGroup().location]",
      "properties": {
        "labVirtualNetworkId": "[variables('labVirtualNetworkId')]",
        "notes": "Free License: SQL Server 2016 SP1 Developer on Windows Server 2016",
        "galleryImageReference": {
          "offer": "SQL2016SP1-WS2016",
          "publisher": "MicrosoftSQLServer",
          "sku": "[parameters('sqlEdition')]",
          "osType": "Windows",
          "version": "latest"
        },
        "size": "[parameters('size')]",
        "userName": "[parameters('userName')]",
        "password": "[parameters('password')]",
        "isAuthenticationWithSshKey": false,
        "labSubnetName": "[variables('labSubnetName')]",
        "disallowPublicIpAddress": true,
        "storageType": "Premium",
        "allowClaim": false,
        "dataDisks": [
          {
            "name": "dataDisk01",
            "diskSizeGiB": "1000"
          }
        ],  
        "networkInterface": {
          "sharedPublicIpAddressConfiguration": {
            "inboundNatRules": [
              {
                "transportProtocol": "Tcp",
                "backendPort": 3389
              }
            ]
          }
        }
      }
    }
  ],
  "outputs": {
    "labVMId": {
      "type": "string",
      "value": "[variables('vmId')]"
    }
  }
}