{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "labName": {
      "type": "string",
      "metadata": {
        "description": "Lab Name will be prefixed to resource's names."
      },
      "defaultValue": "devtestlab"
    },
    "adminUsername": {
      "type": "string",
      "metadata": {
        "description": "Admin username"
      },
      "defaultValue": "sysadmin"
    },
    "adminPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Admin password"
      },
      "defaultValue": "[[[VmPassword]]"
    }
  },
  "variables": {
    "ArtifactsLocation": "https://raw.githubusercontent.com/roberto-mardeni/devtest-arm-templates/master/templates/2-tier-app-iaas",
    "ArtifactsLocationSasToken": "",
    "TemplateFolder": "nested",
    "NetworkTemplate": "network.json",
    "SqlSrvTemplate": "sqlserver.json",
    "WebSrvTemplate": "webserver.json"
  },
  "resources": [
    {
      "name": "Network",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2016-09-01",
      "dependsOn": [],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('ArtifactsLocation'), '/', variables('TemplateFolder'), '/', variables('NetworkTemplate'), parameters('ArtifactsLocationSasToken'))]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "vNetName": { "value": "[concat(parameters('labName'), '-vnet')]" }
        }
      }
    }
  ],
  "outputs": {}
}
