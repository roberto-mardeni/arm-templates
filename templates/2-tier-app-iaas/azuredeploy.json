{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "labName": {
      "type": "string",
      "metadata": {
        "description": "Lab Name will be prefixed to resource's names."
      },
      "defaultValue": "devtestlab"
    },
    "adminUsername": {
      "type": "string",
      "metadata": {
        "description": "Admin username"
      },
      "defaultValue": "sysadmin"
    },
    "adminPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Admin password"
      },
      "defaultValue": "[[[VmPassword]]"
    }
  },
  "variables": {
    "ArtifactsLocation": "https://raw.githubusercontent.com/roberto-mardeni/devtest-arm-templates/master/templates/2-tier-app-iaas",
    "ArtifactsLocationSasToken": "",
    "TemplateFolder": "nested",
    "SqlSrvTemplateFileName": "sqlserver.json"
  },
  "resources": [
    {
      "name": "SqlSrv",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2016-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('ArtifactsLocation'), '/', variables('TemplateFolder'), '/', variables('SqlSrvTemplateFileName'), variables('ArtifactsLocationSasToken'))]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "labName": { "value": "[parameters('labName')]" },
          "userName": { "value": "[parameters('adminUsername')]" },
          "password": { "value": "[parameters('adminPassword')]" }
        }
      }
    }
  ],
  "outputs": {}
}
