{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "AdminUsername": {
      "type": "string",
      "metadata": {
        "description": "Admin username"
      },
      "defaultValue": "sysadmin"
    },
    "AdminPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Admin password"
      },
      "defaultValue": "[[[VmPassword]]"
    },
    "SqlEdition": {
      "type": "string",
      "metadata": {
        "description": "SQL Server Edition"
      },
      "defaultValue": "SQLDEV"
    }
  },
  "variables": {
    "ArtifactsLocation": "https://raw.githubusercontent.com/roberto-mardeni/devtest-arm-templates/master/templates/2-tier-app-iaas",
    "ArtifactsLocationSasToken": "",
    "TemplateFolder": "nested",
    "NetworkTemplate": "network.json",
    "NetworkName": "[concat(resourceGroup().name, '-vnet')]",
    "SqlServerTemplate": "sqlserver.json",
    "SqlServerName": "vmsql01",
    "WebServerTemplate": "webserver.json",
    "WebServerName": "vmweb01"
  },
  "resources": [
    {
      "name": "Network",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2016-09-01",
      "dependsOn": [],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('ArtifactsLocation'), '/', variables('TemplateFolder'), '/', variables('NetworkTemplate'), variables('ArtifactsLocationSasToken'))]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "vNetName": { "value": "[variables('NetworkName')]" }
        }
      }
    },
    {
      "name": "SqlServer",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2016-09-01",
      "dependsOn": [ "Network" ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('ArtifactsLocation'), '/', variables('TemplateFolder'), '/', variables('SqlServerTemplate'), variables('ArtifactsLocationSasToken'))]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "virtualMachineName": { "value": "[variables('SqlServerName')]" },
          "adminUsername": { "value": "[parameters('AdminUserName')]" },
          "virtualNetworkName": { "value": "[variables('NetworkName')]" },
          "virtualNetworkResourceGroup": { "value": "[resourceGroup().name]" },
          "adminPassword": { "value": "[parameters('AdminPassword')]" },
          "ArtifactsLocation": { "value": "[variables('ArtifactsLocation')]" },
          "ArtifactsLocationSasToken": { "value": "[variables('ArtifactsLocationSasToken')]" },
          "SqlEdition": { "value": "[parameters('SqlEdition')]" }
        }
      }
    }
  ],
  "outputs": {}
}
