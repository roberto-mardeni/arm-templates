{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "newVMName": {
        "type": "string",
        "defaultValue": "vmsql01"
      },
      "labName": {
        "type": "string",
        "defaultValue": "DevTestLab"
      },
      "size": {
        "type": "string",
        "defaultValue": "Standard_DS2_v2"
      },
      "userName": {
        "type": "string",
        "defaultValue": "sysadmin"
      },
      "password": {
        "type": "securestring",
        "defaultValue": "[[[VmPassword]]"
      },
      "sqlEdition": {
        "type": "string",
        "metadata": {
          "description": "SQL Server Edition"
        },
        "defaultValue": "SQLDEV",
        "allowedValues": [
          "SQLDEV",
          "Enteprise"
        ]
      }
    },
    "variables": {
      "labSubnetName": "[concat(variables('labVirtualNetworkName'), 'Subnet')]",
      "labVirtualNetworkId": "/subscriptions/15561d27-5df0-4f7b-9cb8-a4a771b9fd71/resourceGroups/DevTestLabRG972615/providers/Microsoft.Network/virtualNetworks/DtlDevTestLab",
      "labVirtualNetworkName": "[concat('Dtl', parameters('labName'))]",
      "vmId": "[resourceId ('Microsoft.DevTestLab/labs/virtualmachines', parameters('labName'), parameters('newVMName'))]",
      "vmName": "[concat(parameters('newVMName'))]"
    },
    "resources": [
      {
        "apiVersion": "2016-05-15",
        "type": "Microsoft.DevTestLab/labs/virtualmachines",
        "name": "[variables('vmName')]",
        "location": "[resourceGroup().location]",
        "properties": {
          "labVirtualNetworkId": "[variables('labVirtualNetworkId')]",
          "notes": "Free License: SQL Server 2016 SP1 Developer on Windows Server 2016",
          "galleryImageReference": {
            "offer": "SQL2016SP1-WS2016",
            "publisher": "MicrosoftSQLServer",
            "sku": "[parameters('sqlEdition')]",
            "osType": "Windows",
            "version": "latest"
          },
          "size": "[parameters('size')]",
          "userName": "[parameters('userName')]",
          "password": "[parameters('password')]",
          "isAuthenticationWithSshKey": false,
          "labSubnetName": "[variables('labSubnetName')]",
          "disallowPublicIpAddress": true,
          "storageType": "Premium",
          "allowClaim": false,
          "networkInterface": {
            "sharedPublicIpAddressConfiguration": {
              "inboundNatRules": [
                {
                  "transportProtocol": "Tcp",
                  "backendPort": 3389
                }
              ]
            }
          }
        }
      }
    ],
    "outputs": {
      "labVMId": {
        "type": "string",
        "value": "[variables('vmId')]"
      }
    }
  }