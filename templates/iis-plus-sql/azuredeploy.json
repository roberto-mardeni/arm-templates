{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "adminUsername": {
      "type": "string",
      "metadata": {
        "description": "Admin username"
      },
      "defaultValue": "sysadmin"
    },
    "adminPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Admin password"
      },
      "defaultValue": "[[[VmPassword]]"
    },
    "sqlVmName": {
      "type": "string",
      "metadata": {
        "description": "SQL Server Name"
      },
      "defaultValue": "vmsql01"
    },
    "sqlVmSize": {
      "type": "string",
      "metadata": {
        "description": "SQL Server VM Size"
      },
      "defaultValue": "Standard_DS2_v2"
    },
    "sqlEdition": {
      "type": "string",
      "metadata": {
        "description": "SQL Server Edition"
      },
      "defaultValue": "SQLDEV",
      "allowedValues": [
        "SQLDEV",
        "Enteprise"
      ]
    }
  },
  "variables": {
    "labName": "DevTestLab",
    "labSubnetName": "[concat(variables('labVirtualNetworkName'), 'Subnet')]",
    "labVirtualNetworkId": "[resourceId('Microsoft.DevTestLab/labs/virtualnetworks', variables('labName'), variables('labVirtualNetworkName'))]",
    "labVirtualNetworkName": "[concat('Dtl', variables('labName'))]",
    "sqlServerId": "[resourceId ('Microsoft.DevTestLab/labs/virtualmachines', variables('labName'), parameters('sqlVmName'))]",
    "sqlServerName": "[concat(variables('labName'), '/', parameters('sqlVmName'))]"
  },
  "resources": [
    {
      "apiVersion": "2016-05-15",
      "type": "Microsoft.DevTestLab/labs/virtualmachines",
      "name": "[variables('sqlServerName')]",
      "location": "[resourceGroup().location]",
      "properties": {
        "labVirtualNetworkId": "[variables('labVirtualNetworkId')]",
        "notes": "Free License: SQL Server 2016 SP1 Developer on Windows Server 2016",
        "galleryImageReference": {
          "offer": "SQL2016SP1-WS2016",
          "publisher": "MicrosoftSQLServer",
          "sku": "[parameters('sqlEdition')]",
          "osType": "Windows",
          "version": "latest"
        },
        "size": "[parameters('sqlVmSize')]",
        "userName": "[parameters('adminUsername')]",
        "password": "[parameters('adminPassword')]",
        "isAuthenticationWithSshKey": false,
        "labSubnetName": "[variables('labSubnetName')]",
        "disallowPublicIpAddress": true,
        "storageType": "Premium",
        "allowClaim": false,
        "networkInterface": {
          "sharedPublicIpAddressConfiguration": {
            "inboundNatRules": [
              {
                "transportProtocol": "Tcp",
                "backendPort": 3389
              }
            ]
          }
        }
      }
    }
  ],
  "outputs": {
    "sqlVMId": {
      "type": "string",
      "value": "[variables('sqlServerId')]"
    }
  }
}
