{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "adminUsername": {
      "type": "string",
      "metadata": {
        "description": "Admin username"
      },
      "defaultValue": "sysadmin"
    },
    "adminPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Admin password"
      },
      "defaultValue": "[[[VmPassword]]"
    },
    "sqlEdition": {
      "type": "string",
      "metadata": {
        "description": "SQL Server Edition"
      },
      "defaultValue": "SQLDEV",
      "allowedValues": [
        "SQLDEV",
        "Enteprise"
      ]
    }
  },
  "variables": {
    "ArtifactsLocation": "https://raw.githubusercontent.com/roberto-mardeni/devtest-arm-templates/master/templates/iis-plus-sql",
    "ArtifactsLocationSasToken": "",
    "TemplateFolder": "nested",
    "SqlServerTemplate": "sqlserver.json",
    "SqlServerName": "vmsql01",
    "WebServerTemplate": "webserver.json",
    "WebServerName": "vmweb01"
  },
  "resources": [
    {
      "name": "SqlServer",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2016-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('ArtifactsLocation'), '/', variables('TemplateFolder'), '/', variables('SqlServerTemplate'), variables('ArtifactsLocationSasToken'))]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "newVMName": { "value": "[variables('SqlServerName')]" },
          "userName": { "value": "[parameters('adminUserName')]" },
          "password": { "value": "[parameters('adminPassword')]" },
          "sqlEdition": { "value": "[parameters('sqlEdition')]" }
        }
      }
    },
    {
      "name": "WebServer",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2016-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('ArtifactsLocation'), '/', variables('TemplateFolder'), '/', variables('WebServerTemplate'), variables('ArtifactsLocationSasToken'))]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "newVMName": { "value": "[variables('WebServerName')]" },
          "userName": { "value": "[parameters('adminUserName')]" },
          "password": { "value": "[parameters('adminPassword')]" }
        }
      }
    }
  ],
  "outputs": {}
}
